<h1>Make new quest</h1>

<%= form_for [current_user, @quest] do |q| %>

	<div><%= q.label :title %>
		<%= q.text_field :title %></div>

	<!-- dropdown/number input -->
	<div><%= q.label :duration %>
		<%= q.text_field :duration %></div>

	<!-- countrystateselect gem or google api? -->
	<div><%= q.label :country %>
		<%= q.text_field :country %></div>

	<!-- countrystateselect gem or google api? -->
	<div><%= q.label :city %>
		<%= q.text_field :city %></div>

	<!-- javascript needed to fix upper range -->
	<div><%= q.label :lower_price %>
		<%= q.text_field :lower_price %>
	</div>

	<div><%= q.label :upper_price %>
		<%= q.text_field :upper_price %></div>

	<div><%= q.label :category %>
		<%= q.text_field :category %></div>

	<div><%= q.label :description %>
		<%= q.text_area :description %></div>

	<%= q.nested_fields_for :activities do |a| %>
    <%= a.remove_nested_fields_link %>
    <div>
    	<%= a.label :description %>
			<%= a.text_area :description %>
		</div>

		<div>
			<%= a.label :estimated_time %>
			<%= a.text_field :estimated_time %>
		</div>

		<div>
			<%= a.label :location %>
			<%= a.text_field :location %>
		</div>

		<div>
			<%= a.label :price %>
			<%= a.text_field :price %>
		</div>

		<div>
			<%= a.label :references %>
			<%= a.text_field :references %>
		</div>

		<div>
			<%= a.hidden_field :day, value: '1'%>
		</div>
	<% end %>
	<%= q.add_nested_fields_link :activities %>
<% end %>