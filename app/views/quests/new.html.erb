<h1>Make new quest</h1>

<%= form_for [current_user, @quest], html: { class: 'form-vertical center' } do |q| %>

	<div><%= q.label :title %>
		<%= q.text_field :title %></div>

	<!-- dropdown/number input -->
	<div><%= q.label :duration %>
		<%= q.text_field :duration %></div>

	<!-- countrystateselect gem or google api? -->
	<div><%= q.label :country %>
		<%= q.text_field :country %></div>

	<!-- countrystateselect gem or google api? -->
	<div><%= q.label :city %>
		<%= q.text_field :city %></div>

	<!-- javascript needed to fix upper range -->
	<div><%= q.label :lower_price %>
		<%= q.text_field :lower_price %>
	</div>

	<div><%= q.label :upper_price %>
		<%= q.text_field :upper_price %></div>

	<div><%= q.label :category %>
		<%= q.text_field :category %></div>

	<div><%= q.label :description %>
		<%= q.text_area :description %></div>

	<div id='activities_form'>
		<%= link_to 'Add new day', '#', id: 'addDay' %>
		<div class='row' style='padding-bottom: 20px;'>
			<div class='well quest-day col-md-4' id='quest-day-1'>
				<%= q.fields_for :activities do |a| %>
					<p>
						<strong>Day 1 Activities</strong>
					</p>
					<%= link_to 'Add new activity', '#', class: 'btn btn-primary btn-sm addActivity', 'data-day' => 1 %>
					<div class='quest-day-1-activities' id='quest-day-1-activity-1'>
						<p>
							<strong>Activity 1</strong>
							<span><a href="#" class='remove_activity' style='color: red;'>x</a></span>
						</p>
						<div><%= a.label :description %>
								<%= a.text_area :description %></div>

						<div><%= a.label :estimated_time %>
								<%= a.text_field :estimated_time %></div>

						<div><%= a.label :location %>
								<%= a.text_field :location %></div>

						<div><%= a.label :price %>
								<%= a.text_field :price %>
						</div>
						<div><%= a.label :references %>
								<%= a.text_field :references %></div>

						<div><%= a.hidden_field :day, value: '1'%></div>
					</div>
				<% end %>

			</div>
		</div>
	</div>
	<%= q.submit %>
<% end %>
