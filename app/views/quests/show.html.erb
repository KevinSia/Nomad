<%= render partial: 'shared/session_navbar' %>
<link href='http://fonts.googleapis.com/css?family=Droid+Sans:700|Droid+Serif' rel='stylesheet' type='text/css'>
<!-- Header -->
<header class="banner">
	<% if @quest.featured? %>
  <span class="background"><%= image_tag('mtfuji2.jpg') %></span>
	<% else %>
	<span class='background'></span>
	<% end %>
  <div id="bannertext">
    <h1><center><%= @quest.title %></center></h1>
    <h1><center>$<%= @quest.total_price %></center></h1>
  </div>
</header>

<div id="flash">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>

<!-- Body -->
<main>
<article>

<div class="container">
<div class="row">

<!-- Profile-->
  <div class="col-md-3">
    <div class="Profile">
      <h1>Posted by</h1>
      <figure class="snip1376">
      <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample17.jpg" alt="sample17" />
      <figcaption>
        <h2><%= @quest.user ? @quest.user.fullname : 'Vinsee' %></h2>
        <!--<p><%= @quest.user.bio %></p>-->
        <p>I've been backpack around the world for the past 2 years! It's my dream to visit all the countries in the world one day :) Feel free to drop me a message to ask me about my travel. </p>
        <br/>
        <!--Join Quest-->
      </figcaption>
     </figure>
      <div>
      <!--Date Picker-->
        <% if @quest.featured %>
          <%= render partial: 'quests/booking_form' %>
        <% elsif @quest.is_wished?(current_user) %>
          <h3>You have wished on this quest</h3>
          <%= link_to 'See your wishlist here', dashboard_path, class: 'btn btn-primary' %>
        <% else %>
          <%= render partial: 'quests/wish_form' %>
        <% end %>
        <%= link_to '#', class: 'btn btn-block btn-primary' do %>
          <span class='glyphicon glyphicon-user'></span>&nbsp;Share
        <% end %>
      <!--end of Date Picker-->
      </div>
    </div>
  </div>

<!--end-->

<!-- Activities Details-->
<div class='col-md-9'>
  <h1>Quest Highlights</h1>
  <% @quest.activities.each do |a| %>
  <figure class='snip1401'>
    <%= image_tag "sakura.jpg", alt: 'Sakura' %>
    <figcaption>
      <h3 id='ActvTitle'><%= a.title %></h3>
      <p id="price">$<%= a.price %></p>
      <p><%= a.description %></p>
      <p>Click to learn more</p>
    </figcaption>
    <i class='ion-ios-location-outline'>
    </i>
    <%= link_to '', a.references, target: '_blank' %>
  </figure>
  <% end %>
</div>
<br/>
<!--end of Activities Details-->

<!--Comments Section-->

<div class="row">
<div class="col-sm-12">
<div class="comments">
    <div class="comment-wrap">
        <div class="photo">
            <div class="avatar" style="background-image: url('https://s3.amazonaws.com/uifaces/faces/twitter/dancounsell/128.jpg')"></div>
        </div>
        <div class="comment-block">
            <form action="">
                <textarea name="" id="" cols="30" rows="3" placeholder="Add comment..."></textarea>
            </form>
        </div>
    </div>

    <div class="comment-wrap">
        <div class="photo">
            <div class="avatar" style="background-image: url('https://s3.amazonaws.com/uifaces/faces/twitter/jsa/128.jpg')"></div>
        </div>
        <div class="comment-block">
            <p class="comment-text">I would love to go on this trip!</p>
            <div class="bottom-comment">
                <div class="comment-date">Aug 24, 2014 @ 2:35 PM</div>
                <ul class="comment-actions">
                    <li class="complain">Complain</li>
                    <li class="reply">Reply</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="comment-wrap">
        <div class="photo">
            <div class="avatar" style="background-image: url('https://s3.amazonaws.com/uifaces/faces/twitter/felipenogs/128.jpg')"></div>
        </div>
        <div class="comment-block">
            <p class="comment-text">My gosh this makes me wanna go on a trip right now!</p>
            <div class="bottom-comment">
                <div class="comment-date">Aug 23, 2014 @ 10:32 AM</div>
                <ul class="comment-actions">
                    <li class="complain">Complain</li>
                    <li class="reply">Reply</li>
                </ul>
            </div>
        </div>
    </div>
</div>

</div>


</div>
</div>
<!--end of Comments Section-->

<!--end-->

</div>
</div>
</article>
</main>
