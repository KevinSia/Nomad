    <thead>
      <tr>
        <th>Quest</th>
        <th>Dates</th>
        <th>Price</th>

      </tr>
    </thead>
    <tbody>
    <%=@payment.each do |p|%>
      <tr>
        <td>p.quest_id</td>
        <td>p.price</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

