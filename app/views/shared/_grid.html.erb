<div class="grid-wrap js">
  <ul class="grid swipe-down" id="grid">
    <li class="title-box text-right">
      <h2>All hail the latest quests from the community!<br></h2>
		</li>
    <% @quests.each.with_index do |quest, index| %>
        <li>
            <%= link_to quest_path(quest) do %>
                <%= image_tag("dummy_#{index + 1}.jpg") %>
                <h3><%= quest.title %></h3>
            <% end %>
        </li>
    <% end %>
